  },
  "keywords": [
    "ai",
    "cryptocurrency",
    "crypto",
    "vector-database",
    "openai",
    "tradinf",
    "trader",
    "trading-bot"
  ],
  "author": "Antoni Kois",
  "license": "ISC",
  "dependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "standard-version": "^9.5.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
