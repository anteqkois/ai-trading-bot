{
  "compilerOptions": {
    "outDir": "dist",
    "module": "Node16",
    "baseUrl": "",
    "rootDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "lib": ["ES2021"],
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]
}
